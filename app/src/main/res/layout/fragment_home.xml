                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_star_black_24dp"
                                        android:padding="40dp"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                        </RelativeLayout>
