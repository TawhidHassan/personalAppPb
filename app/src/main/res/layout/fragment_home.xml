                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="-1.5dp"
                android:layout_marginEnd="-1.5dp"
                android:layout_marginRight="-1.5dp"
