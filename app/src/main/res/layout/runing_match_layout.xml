<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="12dp"
    android:background="@drawable/all_corner_radious"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/tournamentPhotId"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photoeight" />

    <TextView
        android:id="@+id/priceMoneyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="@color/name_d"
        android:text="100tk"
        app:layout_constraintEnd_toEndOf="@+id/tournamentPhotId"
        app:layout_constraintStart_toStartOf="@+id/tournamentPhotId"
        app:layout_constraintTop_toBottomOf="@+id/tournamentPhotId" />

    <TextView
        android:id="@+id/tournamentNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Big Chiken Denar"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/tournamentPhotId"
        app:layout_constraintStart_toStartOf="@+id/tournamentPhotId"
        app:layout_constraintTop_toBottomOf="@+id/priceMoneyId" />

    <TextView
        android:id="@+id/playerJoinStatusId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="100/20"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tournamentPhotId"
        app:layout_constraintStart_toStartOf="@+id/tournamentPhotId"
        app:layout_constraintTop_toBottomOf="@+id/tournamentNameId" />
</androidx.constraintlayout.widget.ConstraintLayout>